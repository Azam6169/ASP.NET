@model VidPlace.ViewModels.CustomerFormViewModel

@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>

@using (Html.BeginForm("Save", "Customers")) {//action and cntroller
    <div class="form-group">
        @Html.LabelFor(m=> m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name,new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Address)
        @Html.TextBoxFor(m => m.Customer.Address, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipId)
        @Html.DropDownListFor(m => m.Customer.MembershipId,  
        new SelectList(Model.MembershipTypes, "Id", "Name"),
        "Select Membership Type", new { @class = "form-control" })
    </div>


    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSunscribedToNewsLetter) Subscribe to NewsLetter
        </label>

        
    </div>
    @Html.HiddenFor(m=>m.Customer.ID);
    <button type="submit" class="btn btn-primary">Save</button>

}
