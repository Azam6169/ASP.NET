@model VidPlace.ViewModels.CustomerMediaViewModel
@{
    ViewBag.Title = "listCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>The media title is @Model.media.Name</h2>
customer list:

@if (Model.customers.Count == 0)
{
    <p>customer has no rented this movie</p>
}
else
{
    foreach (var customer in Model.customers)
    {
        <ul>
            <li>
                @customer.Name;
            </li>

        </ul>
    }
}






